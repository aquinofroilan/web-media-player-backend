{
    "name": "web-media-player-backend",
    "version": "1.0.0",
    "description": "Express.js backend to serve, probe, and stream local media files",
    "main": "dist/index.js",
    "type": "module",
    "scripts": {
        "build": "tsc",
        "start": "node dist/index.js",
        "dev": "tsx watch src/index.ts",
        "lint": "eslint src/**/*.ts",
        "lint:fix": "eslint src/**/*.ts --fix",
        "format": "prettier --write \"src/**/*.ts\"",
        "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
        "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
        "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
    },
    "keywords": [
        "media",
        "streaming",
        "ffmpeg",
        "express",
        "video"
    ],
    "author": "Froilan Aquino",
    "license": "MIT",
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^17.2.3",
        "express": "^5.2.1",
        "fluent-ffmpeg": "^2.1.3"
    },
    "devDependencies": {
        "@eslint/js": "^9.39.2",
        "@types/cors": "^2.8.19",
        "@types/express": "^5.0.6",
        "@types/fluent-ffmpeg": "^2.1.28",
        "@types/jest": "^30.0.0",
        "@types/node": "^24.10.4",
        "@types/supertest": "^6.0.3",
        "@typescript-eslint/eslint-plugin": "^8.50.1",
        "@typescript-eslint/parser": "^8.50.1",
        "eslint": "^9.39.2",
        "jest": "^30.2.0",
        "supertest": "^7.1.4",
        "ts-jest": "^29.4.6",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.50.1",
        "prettier": "3.7.4"
    },
    "trustedDependencies": [
        "unrs-resolver"
    ]
}
